<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ArtikelIslamFragment"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvArtikelHariIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:lineSpacingExtra="8dp"
        android:text="@string/artikel_hari_ini"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"/>

    <LinearLayout
        android:id="@+id/llArtikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArtikelHariIni"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        android:background="@drawable/bg_waktu_sholat">

        <ImageView
            android:id="@+id/ivArtikel"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/sholat"/>

        <TextView
            android:id="@+id/tvJudulArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Shalat Batal karena Keluar Suara saat Menguap?"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"/>

        <TextView
            android:id="@+id/tvSumberArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Shalat Batal karena Keluar Suara saat Menguap?"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnBacaArtikel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingExtra="2dp"
                android:text="@string/baca_artikel"
                android:textColor="@color/blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>